{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "cf-ai-percify-avatar-copilot",
  "main": "src/server.ts",
  "compatibility_date": "2025-08-03",
  "compatibility_flags": ["nodejs_compat"],
  
  // Workers AI binding for Llama 3.3 70B inference
  "ai": {
    "binding": "AI"
  },
  
  "assets": {
    "directory": "public"
  },
  
  // Durable Objects for persistent agent state
  "durable_objects": {
    "bindings": [
      {
        "name": "Chat",
        "class_name": "PercifyAvatarAgent"
      }
    ]
  },
  
  // Migrations for Durable Object SQLite storage
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["PercifyAvatarAgent"]
    }
  ]
}
